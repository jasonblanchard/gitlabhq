= form_for [@project, @issue], :remote => true, :html => {:class => 'edit-issue inline-update'} do |f|
  .pull-right
  Created by #{link_to_member(@project, issue.author)}
  - if issue.assignee
    \ and currently assigned to #{link_to_member(@project, issue.assignee)}
    = f.select(:assignee_id, @project.team.members.sort_by(&:name).map {|p| [ "#{image_tag(avatar_icon(p.email), class: "avatar avatar-inline")} #{p.name}", p.id ] }, { include_blank: "Assign to" }, {class: 'chosen'})

  - if issue.milestone
    - milestone = issue.milestone
    %cite.cgray and attached to milestone
    %strong= link_to_gfm truncate(milestone.title, length: 20), project_milestone_path(milestone.project, milestone)
    = f.select(:milestone_id, @project.milestones.active.all.collect {|p| [ p.title, p.id ] }, { include_blank: "Select milestone" }, {class: 'chosen'})

  = hidden_field_tag :issue_context
  = f.submit :class => 'btn'

.pull-right
  - issue.labels.each do |label|
    %span{class: "label #{label_css_class(label.name)}"}
      %i.icon-tag
      = label.name
    &nbsp;
